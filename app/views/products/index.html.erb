<!DOCTYPE html> <html lang="en"> <head>
<meta charset="UTF-8">
<title>Products Dashboard</title>
  <style type="text/css">
    body{
      margin-top: 2em;
    }
  </style>
</head>
<body>
<div class="container">
<h1>Product Listing</h1>
   <div class="row">
        <div class="twelve columns">
         <table class="u-full-width">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Pricing</th>
                <th></th>
               </tr>
               </thead>

               <tbody>
                <% @products.each { |product| %>
                <tr>
                  <td><%= product.name%></td>
                  <td><%= product.description%></td>
                  <td>$<%= product.pricing %></td>
                  <td>
                  <a href="/products/<%= product.id %>">Show</a> |
                  <a href="/products/<%= product.id %>/edit">Edit</a> |
                  <a href="/products/<%= product.id%>" data-method="delete">Destroy</a>
                  </td>
                </tr>
                <% } %>
            </tbody>
          </table>
        </div>
        <a class="button" href="/new">New Product</a>
      </div>
    </div>
  </body>
</html>
